<%= form_with model: @event do |f| %>
  <%= f.label :title, "Title" %><br />
  <%= f.text_field :title, placeholder: "Title of Your Event"%><br />
  <%= f.label :date, "When will your event happpen?" %><br />
  <%= f.date_select :date %><br />
  <%= f.label :desc, "Briefly describe your event" %><br />
  <%= f.text_area :desc, placeholder: "Party night!" %><br />
  <%= f.label :country, "Country in which you event will happen" %><br />
  <%= f.text_field :country %><br />
  <%= f.label :city, "City in which your event will happen" %><br />
  <%= f.text_field :city%><br />
  <%= f.label :starting_time, "Starting time of your event" %><br />
  <%= f.time_select :starting_time %><br />
  <%= f.label :ending_time, "Ending time of your event" %><br />
  <%= f.time_select :ending_time %><br />
  <%= f.submit%><br />
<% end %>
